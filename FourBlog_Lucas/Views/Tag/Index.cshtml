@model TagViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tags</h1>

<mensagem texto="@TempData["TagCadastrada"]" class="alert alert-success"></mensagem>
<mensagem texto="@TempData["TagNaoCadastrada"]" class="alert alert-danger"></mensagem>

<h4>Criar uma tag</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tag.Nome" class="control-label"></label>
                <input asp-for="Tag.Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<h4>Tags Cadastradas</h4>

<table class="table">
    <thead>
        <tr>
            <th>
               Nome da Tag
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Tag tag in Model.Tags) {
        <tr>
            <td>
                @tag.Nome
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@tag.TagId">Editar</a>
            </td>
        </tr>
}
    </tbody>
</table>
